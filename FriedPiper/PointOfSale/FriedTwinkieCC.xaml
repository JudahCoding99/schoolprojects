<UserControl x:Class="FriedPiper.PointOfSale.FriedTwinkieCC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FriedPiper.PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <BitmapImage x:Key="Twinkie" UriSource="Pics/Twinkie.png"/>
    </UserControl.Resources>
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="{StaticResource Twinkie}"/>
        </Grid.Background>
        <Label VerticalAlignment="Top" HorizontalAlignment="Right" FontSize="30" FontWeight="DemiBold">Why Would You Eat Me</Label>
    </Grid>
</UserControl>
